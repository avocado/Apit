<%= simple_form_for @page do |f| %>
	<div class="row">
		<div class="span7">
			<%= f.input :title, :input_html=>{:class=>"span7"}%>
		</div>
		<div class="span4">
			<%= f.input :permalink %>
		</div>
		<div class="span4">
			<%= f.association :parent, :label=>"Valt onder pagina" %>
		</div>
	</div>
	<div class="row">
		<div class="span16">
			<%= f.input :content, :input_html=>{:class=>"span15"} %>
			<%= f.input :positie, :as=>:hidden %>
			
		</div>
	</div>
	  <div class="actions">
	    <%= f.submit :class => "btn primary float-right"%>
	  </div>
<% end %>