<% @page.content = @page.parent.content if @page.content == "" && @page.permalink!="root" %>
<%= RedCloth.new(@page.content).to_html.html_safe %>
<% #extra rechten nodig %>
<% if can? :edit, @page && @page.permalink!='root' &&!@page.locked %>
<div class="editoptions">
	<%= link_to(image_tag("/images/min.png"), @page, :confirm => 'Zeker weten dat je deze pagina wilt verwijderen?', :method => :delete) if can? :delete, @page %>
		<%= link_to(image_tag('/images/edit.png'), edit_page_path(@page)) %>
</div>
<% end %>
